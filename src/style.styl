* {
    box-sizing: border-box
}
body {
    font-family: 'Source Sans Pro', sans-serif;
    background: #1F1F1F;
    margin: 0;
    color: white;
    display: flex;
}

@media (max-width: 600px) {
    body {
        font-size: 20px;
        flex-direction: column-reverse;
    }
}

h1 {
    font-weight: 200;
    color: white;
    display: block;
    margin-bottom: .5em;
    font-size: 1.25em;
}

.about {
    text-align: right;
    margin-right: 2em;
    margin-top: 1em;
}

@media (max-width: 600px) {
    .about {
        text-align: left;
        margin-left: 25px;
        display: flex;
        flex-direction: column-reverse;
    }
}

.about ul {
    list-style: none;
    margin: 0;
    padding:0;
    color: white;
    display: inline;
}

.projects {
    display: inline;
    margin-right: .5em;
    font-size: .9em;
}

.hip-social-media-stuff {
    display: inline;
}

.hip-social-media-stuff li,
.projects li {
    display: inline;
    margin-right: .5em;
}

.hip-social-media-stuff a,
.projects a {
    color: white;
    text-decoration: none;
}

.projects a {
    top: -.15em;
    position: relative;
    font-weight: 200;
    &:hover {
        text-decoration: underline;
    }
}

@font-face {
    font-family: 'icomoon';
    src:url('/fonts/icomoon.eot?tt1wsp');
    src:url('/fonts/icomoon.eot?#iefixtt1wsp') format('embedded-opentype'),
        url('/fonts/icomoon.woff?tt1wsp') format('woff'),
        url('/fonts/icomoon.ttf?tt1wsp') format('truetype'),
        url('/fonts/icomoon.svg?tt1wsp#icomoon') format('svg');
    font-weight: normal;
    font-style: normal;
}

[class^="icon-"], [class*=" icon-"] {
    font-family: 'icomoon';
    speak: none;
    font-style: normal;
    font-weight: normal;
    font-variant: normal;
    text-transform: none;
    line-height: 1;

    /* Better Font Rendering =========== */
    -webkit-font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale;
}

.icon-arrow-right2:before {
    content: "\ea3c";
}

.icon-arrow-left2:before {
    content: "\ea40";
}

.icon-twitter:before {
    content: "\ea91";
}

.icon-github:before {
    content: "\eab1";
}

.icon-stackoverflow:before {
    content: "\e600";
    font-size: .85em;
    top: -.05em;
    position: relative;
}

.icon-mail:before {
    content: "\e601";
    font-size: .85em;
    top: -.05em;
    position: relative;
}

.icon-linkedin:before {
    content: "\eac8";
}

nav li {
    list-style: none;
    color: #b6c95c;
    text-transform: uppercase;
}
@media (max-width: 600px) {
    nav {
        border-bottom: 1px solid white;
        padding-bottom: 0.5em;
    }
    nav li {
        display: inline-block;
        margin-right: .75em;
    }
    nav li:first-child:after {
        content: '\2022';
        margin-left: 1em;
        color: white;
    }
    h1 {
        margin-top: .5em;
    }
}

nav li a {
    color: white;
    text-transform: uppercase;
    text-decoration: none;
}
